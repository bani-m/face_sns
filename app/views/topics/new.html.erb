<p id="notice"><%= notice %></p>

<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      # バリデーションエラーの件数を表示します。
      <h2><%= @topic.errors.count %>件のエラーがあります。</h2>

      <ul>
      # @topic.errorsは@topicをバリデーションした際のエラー情報です。
      # full_messagesは複数のエラーメッセージを表します。
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "トピック一覧画面にもどる", topics_path %>